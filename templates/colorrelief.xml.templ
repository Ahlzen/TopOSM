<!-- Full-resolution color relief -->
<Style name="colorrelief">
  <Rule>
    &minz13;
    <RasterSymbolizer scaling="bilinear" />
  </Rule>
</Style>

<!-- Quarter-resolution color relief -->
<Style name="colorrelief_q">
  <Rule>
    &minz11; &maxz12;
    <RasterSymbolizer scaling="bilinear" />
  </Rule>
</Style>

<!-- Sixteenth-resolution color relief -->
<Style name="colorrelief_s">
  <Rule>
    &minz9; &maxz10;
    <RasterSymbolizer scaling="bilinear" />
  </Rule>
</Style>

<!-- Sixty-fourth-resolution color relief -->
<Style name="colorrelief_f">
  <Rule>
    &maxz8;
    <RasterSymbolizer scaling="bilinear" />
  </Rule>
</Style>

<!--
&colorrelieflayers;
-->

<Layer name="colormap" status="off">
    <StyleName>colormap</StyleName>
    <Datasource>
      <Parameter name="type">gdal</Parameter>
      <Parameter name="file">geodata/colormap/colormap.vrt</Parameter>
      <Parameter name="format">vrt</Parameter>
    </Datasource>
</Layer>

<Layer name="landcover" status="on">
    <StyleName>landcover</StyleName>
    <Datasource>
      <Parameter name="type">gdal</Parameter>
      <Parameter name="file">geodata/nlcd2006/nlcd2006_cadetail.tif</Parameter>
    </Datasource>
</Layer>

<Layer name="hillshade" status="on">
    <StyleName>hillshade</StyleName>
    <Datasource>
      <Parameter name="type">gdal</Parameter>
      <Parameter name="file">geodata/hillshade/hillshade.vrt</Parameter>
      <Parameter name="format">vrt</Parameter>
    </Datasource>
</Layer>



</Map>

